<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#F5F5F5">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"

        android:textColor="#000000"
        android:layout_gravity="start"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upgrade Your Plan"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You've reached your free chat limit"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="32dp" />

    <!-- Pricing Card 1 (5 Chats) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starter Pack"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/starterPackText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Chats - ₹49"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/buy5Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buy 5 Chats"
              
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:padding="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Pricing Card 2 (10 Chats) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pro Pack"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/proPackText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 Chats - ₹99"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/buy10Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buy 10 Chats"
           
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:padding="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Secure payment via Google Play\n• Instant access after purchase\n• Cancel anytime"
        android:textSize="14sp"
        android:textColor="#999999"
        android:layout_marginTop="24dp" />

</LinearLayout>
