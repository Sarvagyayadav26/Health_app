<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="@dimen/activity_padding">

    <!-- sarvagyaa Header -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/backBtn"
        android:text="Back"
        app:backgroundTint="#FFFFFF"
        app:strokeColor="#003366"
        app:strokeWidth="1dp"
        android:textColor="#003366"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="48dp"
        android:minHeight="45dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/titleText"
        android:textColor="#003366"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Relief Chat"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintStart_toEndOf="@id/backBtn"
        app:layout_constraintEnd_toStartOf="@+id/chatsBtn"
        app:layout_constraintTop_toTopOf="@id/backBtn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/chatsBtn"
        android:text="Chats: --"
        app:backgroundTint="#FFFFFF"
        app:strokeColor="#003366"
        app:strokeWidth="1dp"
        android:textColor="#003366"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="64dp"
        android:minHeight="45dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/chatsHistoryBtn"
        app:layout_constraintTop_toTopOf="@id/backBtn"
        app:layout_constraintBottom_toBottomOf="@id/backBtn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/chatsHistoryBtn"
        android:text="Chats history"
        app:backgroundTint="#FFFFFF"
        app:strokeColor="#003366"
        app:strokeWidth="1dp"
        android:textColor="#003366"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="75dp"
        android:minHeight="45dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginStart="6dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/closeHistoryBtn"
        app:layout_constraintTop_toTopOf="@id/backBtn"
        app:layout_constraintBottom_toBottomOf="@id/backBtn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/closeHistoryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/button_min_height"
        android:paddingStart="@dimen/small_padding"
        android:paddingEnd="@dimen/small_padding"
        android:text="Close history"
        android:textSize="13sp"
        android:textColor="#003366"
        app:strokeColor="#003366"
        app:strokeWidth="1dp"
        app:backgroundTint="#FFFFFF"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/backBtn"
        app:layout_constraintBottom_toBottomOf="@id/backBtn"
        android:layout_marginStart="@dimen/small_margin" />

    <!-- Chat output box with a simple background border -->
    <ScrollView
        android:id="@+id/chatScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="#E3F2FD"
        android:padding="1dp"
        app:layout_constraintTop_toBottomOf="@+id/backBtn"
        app:layout_constraintBottom_toTopOf="@+id/buy10Btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/chatContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0F8FF"
            android:padding="@dimen/medium_padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chatBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chat output will appear here"
                android:textColor="#003366"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

    <!-- Subscribe Button (Initially Hidden) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buy10Btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Buy More Chats"
        android:textColor="#003366"
        app:strokeColor="#003366"
        app:strokeWidth="1dp"
        app:backgroundTint="#FFFFFF"
        android:layout_marginTop="@dimen/small_margin"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chatScroll"
        app:layout_constraintBottom_toTopOf="@id/inputLayout" />

    <!-- Input box -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Type your message..."
        android:textColorHint="#003366"
        app:boxStrokeColor="#003366"
        app:layout_constraintBottom_toTopOf="@id/sendBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#003366" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Send button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/sendBtn"
        android:text="Send"
        app:backgroundTint="#FFFFFF"
        app:strokeColor="#003366"
        app:strokeWidth="1dp"
        android:textColor="#003366"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/button_min_height"
        android:layout_marginTop="@dimen/small_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>